@{
    ViewBag.Title = "Upload Excel File";
}

<div class="container mt-5">
    <h2>Upload Excel File</h2>
    <p>@ViewBag.Message</p>

    @using (Html.BeginForm("UploadExcel", "Employee", FormMethod.Post, new { enctype = "multipart/form-data", @class = "mt-3" }))
    {
        <div class="form-group">
            <label for="file">Choose an Excel File</label>
            <input type="file" name="file" class="form-control-file" />
        </div>

        <button type="submit" class="btn btn-primary">Upload</button>
    }
</div>

<div class="container mt-5">
    <h2>Data</h2>
    @if (ViewBag.Employees != null)
    {
        <table class="table">
            <thead>
                <tr>
                    @foreach (System.Data.DataColumn col in ViewBag.Employees.Columns)
                    {
                        <th>@col.ColumnName</th>
                    }
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in ViewBag.Employees.Rows)
                {
                    <tr>
                        @foreach (var cell in row.ItemArray)
                        {
                            <td>@cell.ToString()</td>
                            
                        }
<td>
                                <a href="@Url.Action("Edit", "Employee", new { id = row[0] })" class="btn btn-primary">Edit</a>
                                <a href="@Url.Action("Delete", "Employee", new { id = row[0] })" class="btn btn-danger">Delete</a>
                            </td>
                    </tr>

                }
            </tbody>
        </table>
    }
</div>
